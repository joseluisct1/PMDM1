<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contactoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient"
        tools:context=".ContactoActivity">


        <ImageView
                android:layout_width="315dp"
                android:layout_height="275dp"
                app:srcCompat="@drawable/mct"
                android:id="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"/>
        <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayoutPhone" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3" android:layout_marginStart="32dp">

            <ImageView
                    android:layout_width="51dp"
                    android:layout_height="55dp"
                    android:src="@drawable/phone1"
                    android:id="@+id/imgPhone"/>

            <EditText
                    android:layout_width="250dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:id="@+id/editTextPhone"
                    android:hint="@string/telefono"
                    android:inputType="phone"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayoutEmail"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutPhone"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayoutPhone" android:layout_marginStart="32dp">

            <ImageView
                    android:layout_width="51dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/email1"
                    android:id="@+id/imgemail"/>
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:id="@+id/editTextEmail"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="500dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:id="@+id/linearLayoutMaps"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutEmail"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayoutEmail" android:layout_marginStart="32dp">

            <ImageView
                    android:layout_width="51dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/mapa1"
                    android:id="@+id/imgMaps"/>

            <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/editTextMaps"
                    android:hint="@string/direccion"
                    android:inputType="textPostalAddress"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintStart_toEndOf="@+id/imageView4">

            <ImageView
                    android:layout_width="63dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/email1"
                    android:id="@+id/imgWhatsApp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacta por WhatsApp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <ImageView
                android:layout_width="365dp"
                android:layout_height="431dp" app:srcCompat="@drawable/mapasituacion"
                android:id="@+id/imageView4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/imageView3"
                android:layout_marginStart="32dp" android:layout_marginTop="32dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>