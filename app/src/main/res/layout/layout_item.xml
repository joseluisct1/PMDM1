<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:background = "@drawable/borde_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

    <TextView
            android:text="@string/nemonico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtNemonico"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold" android:textSize="34sp"
            android:layout_marginBottom="48dp" app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/Capacidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtCapacidad"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintHorizontal_bias="0.311" android:textAlignment="textStart"
            app:layout_constraintStart_toEndOf="@+id/imageView2"/>
    <TextView
            android:text="@string/nombre_insta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtNombre"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNemonico"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="8dp"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toEndOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.292"/>
    <ImageView
            android:layout_width="76dp"
            android:layout_height="89dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>